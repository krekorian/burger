<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Burger App</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 waiting-bugers">
            <h3>Waiting to be devoured Burger</h3>

        </div>
        <div class="col-lg-3">
            <h3>Enter New Burger</h3>

        </div>
        <div class="col-lg-3">
            <h3>Devoured Burger</h3>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-3 waiting-bugers">

            {{#each burgers}}


            {{#if devoured}}
            {{else}}

            {{> waiting-view devoured=false}}
            {{/if}}
            {{/each}}
        </div>
        <div class="col-lg-3">

            <form class="create-form">

                <div class="form-group">
                    <label>Burger Name:</label>
                    <input type="text" id="newburger" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-lg-3">

            {{#each burgers}}


            {{#if devoured}}


            {{> devoured-view devoured=true}}
            {{/if}}
            {{/each}}
        </div>

    </div>
</div>